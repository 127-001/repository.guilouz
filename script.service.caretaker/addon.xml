<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.caretaker" name="KN Addon Caretaker" version="0.0.6" provider-name="Birger Jesch">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="xbmc.json" version="7.0.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.python.script" library="addon.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Take care with unauthorized Repositories</summary>
        <description lang="en_GB">This service checks your addon folder for unauthorized, potentially harmful repositories.</description>
        <disclaimer lang="en_GB">Use at your own risk.</disclaimer>
        <summary lang="de_DE">Vorsicht vor nicht autorisierten Repositories</summary>
        <description lang="de_DE">Dieser Dienst überprüft den Addon-Ordner auf nicht autorisierte, möglicherweise schädliche Repositories.</description>
        <disclaimer lang="de_DE">Benutzung auf eigene Gefahr.</disclaimer>
        <summary lang="fr_FR">Fates attention aux dépôts d'extensions non autorisés</summary>
        <description lang="fr_FR">Ce service vérifie que votre dossier d'extensions ne contient pas de dépôts non autorisés et potentiellement dangereux.</description>
        <disclaimer lang="fr_FR">A utiliser à vos risques et périls.</disclaimer>
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, June 2007</license>
        <forum></forum>
        <website></website>
        <email></email>
        <source>https://github.com/b-jesch/script.service.caretaker</source>
        <news></news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart></fanart>
            <screenshot></screenshot>
        </assets>
    </extension>
</addon>