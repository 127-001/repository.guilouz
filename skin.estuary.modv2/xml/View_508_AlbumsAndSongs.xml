<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_508_AlbumsAndSongs">
		<control type="group">
			<include>OpenClose_Left</include>
			<visible>Control.IsVisible(508)</visible>
			<include>Visible_Left</include>
			<depth>DepthContentPanel</depth>
			<include content="ContentPanel">
				<param name="width" value="53.1%" />
				<param name="flipx" value="$PARAM[flip_bg]" />
			</include>
			<control type="fixedlist" id="508">
				<width>50%</width>
				<top>list_y_offset</top>
				<bottom>list_y_offset</bottom>
				<left>0</left>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<movement>2</movement>
				<focusposition>3</focusposition>
				<onleft condition="!Skin.HasSetting(KioskMode)">9000</onleft>
				<onright>SetFocus(5081,1)</onright>
				<onup>508</onup>
				<ondown>508</ondown>
				<viewtype label="$LOCALIZE[40212]">list</viewtype>
				<focusedlayout height="160">
					<control type="group">
						<top>-50</top>
						<control type="image">
							<left>0</left>
							<right>0</right>
							<height>160</height>
							<texture colordiffuse="$VAR[SkinColorVar]">lists/focus.png</texture>
							<animation effect="fade" start="100" end="50" time="40" condition="Control.HasFocus(5081)">Conditional</animation>
							<visible>Control.HasFocus(508) | Control.HasFocus(5081)</visible>
						</control>
						<control type="image">
							<left>35</left>
							<top>20</top>
							<width>120</width>
							<height>120</height>
							<texture fallback="DefaultAudio.png">$INFO[ListItem.Icon]</texture>
							<aspectratio align="left" aligny="center">stretch</aspectratio>
							<bordertexture>colors/white.png</bordertexture>
							<bordersize>1</bordersize>
						</control>
						<control type="label">
							<left>190</left>
							<top>20</top>
							<height>40</height>
							<right>30</right>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label,[B],[/B]]</label>
							<shadowcolor>text_shadow</shadowcolor>
							<scroll>true</scroll>
						</control>
						<control type="label">
							<left>190</left>
							<top>100</top>
							<height>40</height>
							<right>30</right>
							<aligny>center</aligny>
							<label>$INFO[ListItem.AlbumArtist]</label>
							<shadowcolor>text_shadow</shadowcolor>
							<scroll>true</scroll>
						</control>
						<control type="label">
							<left>190</left>
							<top>60</top>
							<height>40</height>
							<right>30</right>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Year]</label>
							<font>font12</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</control>
				</focusedlayout>
				<itemlayout height="160">
					<control type="group">
						<top>-50</top>
						<control type="image">
							<left>35</left>
							<top>20</top>
							<width>120</width>
							<height>120</height>
							<texture fallback="DefaultAudio.png">$INFO[ListItem.Icon]</texture>
							<aspectratio align="left" aligny="center">stretch</aspectratio>
							<bordertexture>colors/white.png</bordertexture>
							<bordersize>1</bordersize>
						</control>
						<control type="label">
							<left>190</left>
							<top>20</top>
							<height>40</height>
							<right>30</right>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label,[B],[/B]]</label>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="label">
							<left>190</left>
							<top>100</top>
							<height>40</height>
							<right>30</right>
							<aligny>center</aligny>
							<label>$INFO[ListItem.AlbumArtist]</label>
							<textcolor>$VAR[SkinColorVar]</textcolor>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="label">
							<left>190</left>
							<top>60</top>
							<height>40</height>
							<right>30</right>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Year]</label>
							<font>font12</font>
							<textcolor>grey</textcolor>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</control>
				</itemlayout>
			</control>
		</control>
		<control type="group">
			<include>OpenClose_Right</include>
			<visible>Control.IsVisible(508)</visible>
			<include>Visible_Right</include>
			<control type="fixedlist" id="5081">
				<width>50%</width>
				<top>list_y_offset</top>
				<bottom>list_y_offset</bottom>
				<right>0</right>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<pagecontrol>531</pagecontrol>
				<movement>5</movement>
				<focusposition>6</focusposition>
				<onleft>508</onleft>
				<onright>531</onright>
				<onup>5081</onup>
				<ondown>5081</ondown>
				<viewtype label="$LOCALIZE[40212]">list</viewtype>
				<focusedlayout height="80">
					<control type="group">
						<top>30</top>
						<control type="image">
							<left>0</left>
							<right>0</right>
							<height>80</height>
							<texture colordiffuse="$VAR[SkinColorVar]">lists/focus.png</texture>
							<visible>Control.HasFocus(5081)</visible>
						</control>
						<control type="label">
							<left>35</left>
							<height>80</height>
							<right>80</right>
							<aligny>center</aligny>
							<scroll>true</scroll>
							<label>$INFO[ListItem.Label]</label>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="label">
							<left>40</left>
							<height>80</height>
							<right>30</right>
							<align>right</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Duration]</label>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</control>
				</focusedlayout>
				<itemlayout height="80">
					<control type="group">
						<top>30</top>
						<control type="label">
							<left>35</left>
							<height>80</height>
							<right>80</right>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
						<control type="label">
							<left>40</left>
							<height>80</height>
							<right>30</right>
							<align>right</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Duration]</label>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</control>
				</itemlayout>
				<content target="music">$INFO[Container(508).ListItem.DBID,musicdb://albums/]</content>
			</control>
		</control>
	</include>
</includes>