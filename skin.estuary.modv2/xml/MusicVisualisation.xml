			<animation effect="slide" start="0,210" end="0,0" time="350" condition="!Window.IsVisible(seekbar)">Conditional</animation>
		</control>
		
		<control type="image">
			<description>Cover art, at bottom left</description>
			<left>10</left>
			<bottom>10</bottom>
			<width>210</width>
			<height>210</height>
			<aspectratio align="left" aligny="center">keep</aspectratio>
