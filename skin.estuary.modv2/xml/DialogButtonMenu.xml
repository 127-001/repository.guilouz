<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>9000</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<controls>
		<include>DefaultBackground</include>
		<control type="group">
			<centerleft>50%</centerleft>
			<width>1600</width>
			<centertop>50%</centertop>
			<height>795</height>
			<include>OpenClose_Right</include>
			<visible>!Skin.HasSetting(powermenu_list)</visible>
			<control id="9000" type="panel">
				<left>0</left>
				<width>100%</width>
				<top>0</top>
				<height>780</height>
				<itemlayout height="260" width="400">
					<control type="image">
						<left>-5</left>
						<width>410</width>
						<height>270</height>
						<texture>dialogs/dialog-bg-nobo.png</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
					</control>
					<control type="image">
						<centerleft>50%</centerleft>
						<top>30</top>
						<width>300</width>
						<height>140</height>
						<texture>$INFO[ListItem.Icon]</texture>
						<aspectratio align="center">keep</aspectratio>
					</control>
					<control type="textbox">
						<left>25</left>
						<top>170</top>
						<width>350</width>
						<height>80</height>
						<label>$INFO[ListItem.Label]</label>
						<font>font25_title</font>
						<align>center</align>
						<aligny>center</aligny>
					</control>
				</itemlayout>
				<focusedlayout height="230" width="400">
					<control type="group">
						<depth>DepthContentPopout</depth>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="200,140" start="100" end="110" time="250" tween="sine" />
						</animation>
						<animation type="UnFocus" reversible="false">
							<effect type="zoom" center="200,140" start="110" end="100" time="250" tween="sine" />
						</animation>
						<control type="image">
							<left>-5</left>
							<width>410</width>
							<height>270</height>
							<texture>dialogs/dialog-bg-nobo.png</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>-5</left>
							<width>410</width>
							<height>270</height>
							<texture colordiffuse="$VAR[SkinColorVar]">colors/grey.png</texture>
							<bordersize>20</bordersize>
							<include>Animation_FocusTextureFade</include>
						</control>
						<control type="image">
							<left>-5</left>
							<width>410</width>
							<height>270</height>
							<texture colordiffuse="$VAR[GradientColorVar]">colors/gradient.png</texture>
							<bordersize>20</bordersize>
							<include>Animation_FocusTextureFade</include>
							<visible>Skin.HasSetting(EnableGradientColor)</visible>
						</control>
						<control type="image">
							<centerleft>50%</centerleft>
							<top>30</top>
							<width>300</width>
							<height>140</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio align="center">keep</aspectratio>
						</control>
						<control type="textbox">
							<left>25</left>
							<top>170</top>
							<width>350</width>
							<height>80</height>
							<label>$INFO[ListItem.Label]</label>
							<font>font25_title</font>
							<align>center</align>
							<aligny>center</aligny>
						</control>
					</control>
				</focusedlayout>
				<content>
					<include>skinshortcuts-group-powermenu</include>
				</content>
			</control>
		</control>
		<control type="group">
			<centerleft>50%</centerleft>
			<left>0</left>
			<right>0</right>
			<centertop>50%</centertop>
			<include>OpenClose_Right</include>
			<visible>Skin.HasSetting(powermenu_list)</visible>
			<control id="9000" type="wraplist">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>1900</width>
				<height>380</height>
				<focusposition>2</focusposition>
				<orientation>horizontal</orientation>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<itemlayout height="380" width="380">
					<control type="image">
						<left>0</left>
						<width>380</width>
						<height>380</height>
						<texture>dialogs/dialog-bg-nobo.png</texture>
						<bordertexture border="21">overlays/shadow.png</bordertexture>
						<bordersize>20</bordersize>
					</control>
					<control type="image">
						<left>40</left>
						<top>70</top>
						<width>300</width>
						<height>150</height>
						<aspectratio align="center">keep</aspectratio>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="textbox">
						<left>30</left>
						<top>255</top>
						<width>320</width>
						<height>80</height>
						<align>center</align>
						<aligny>center</aligny>
						<font>font25_title</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="380" width="380">
					<control type="group">
						<depth>DepthContentPopout</depth>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="190,120" start="100" end="110" time="250" tween="sine" />
						</animation>
						<animation type="UnFocus" reversible="false">
							<effect type="zoom" center="190,120" start="110" end="100" time="250" tween="sine" />
						</animation>
						<control type="image">
							<left>0</left>
							<width>380</width>
							<height>380</height>
							<texture>dialogs/dialog-bg-nobo.png</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<width>380</width>
							<height>380</height>
							<texture colordiffuse="$VAR[SkinColorVar]">colors/grey.png</texture>
							<bordersize>20</bordersize>
							<include>Animation_FocusTextureFade</include>
						</control>
						<control type="image">
							<left>40</left>
							<top>70</top>
							<width>300</width>
							<height>150</height>
							<aspectratio align="center">keep</aspectratio>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="textbox">
							<left>30</left>
							<top>255</top>
							<width>320</width>
							<height>80</height>
							<align>center</align>
							<aligny>center</aligny>
							<font>font25_title</font>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
				</focusedlayout>
				<content>
					<include>skinshortcuts-group-powermenu</include>
				</content>
			</control>
		</control>
		<include>TopBar</include>
		<include>BottomBar</include>
		<control type="group">
			<depth>DepthBars</depth>
			<animation effect="slide" end="0,-90" time="300" tween="sine" easing="inout" condition="$EXP[infodialog_active]">conditional</animation>
			<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
			<top>20</top>
			<left>20</left>
			<control type="image">
				<aspectratio>keep</aspectratio>
				<width>56</width>
				<height>56</height>
				<texture colordiffuse="$VAR[SkinColorVar]">icons/logo.png</texture>
			</control>
			<control type="image">
				<left>40</left>
				<top>10</top>
				<aspectratio>keep</aspectratio>
				<width>192</width>
				<height>36</height>
				<texture>icons/logo-text.png</texture>
			</control>
		</control>
	</controls>
</window>