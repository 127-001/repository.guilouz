<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_506_Mosaic">
		<control type="group">
			<include>OpenClose_Right</include>
			<visible>Control.IsVisible(506)</visible>
			<include>Visible_Right</include>
			<left>0</left>
			<right>0</right>
			<top>85</top>
			<control type="panel" id="506">
				<width>100%</width>
				<height>910</height>
				<onup condition="!Skin.HasSetting(KioskMode)">9000</onup>
				<onright>506</onright>
				<onleft>506</onleft>
				<ondown>5199</ondown>
				<viewtype label="$LOCALIZE[40017]">icon</viewtype>
				<preloaditems>2</preloaditems>
				<pagecontrol>5199</pagecontrol>
				<orientation>horizontal</orientation>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<visible>Container.Content(images)</visible>
				<itemlayout height="180" width="280" condition="Container.Content(images)">
					<control type="image">
						<left>10</left>
						<top>10</top>
						<width>270</width>
						<height>170</height>
						<texture fallback="DefaultFolderSquare.png" background="true">$VAR[ShiftThumbVar]</texture>
						<aspectratio>scale</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="180" width="280" condition="Container.Content(images)">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>290</width>
							<height>190</height>
							<texture colordiffuse="$VAR[SkinColorVar]">colors/white.png</texture>
						</control>
						<control type="image">
							<left>10</left>
							<top>10</top>
							<width>270</width>
							<height>170</height>
							<texture fallback="DefaultFolderSquare.png" background="true">$VAR[ShiftThumbVar]</texture>
							<aspectratio>scale</aspectratio>
						</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>